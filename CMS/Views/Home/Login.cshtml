<script type="text/javascript">

        $("#btnsave").on("click", function ()
        {
            var Mobile = $('#txtmobilenumber').val();
            //var Countrycode = $('#ddlcountrycode').val();
            // var AcademicYear = $('#AcademicYear option:selected').text();
            if (Mobile == "" || Mobile == null)
            {
                swal({ title: "Error !", text: 'Mobile number not empty !', showConfirmButton: false, timer: 1200, type: 'error', animation: true });
                return false;
            }
            $.ajax({
                    url: "@Url.Action("CheckUser", "Home")",
                    method: "POST",
                    datatype: "json",
                    data: { sMobile: Mobile},
                    success: function (data)
                    {
                        console.log("data: " + data)
                        if (data != "200")
                        {

                            window.location.href = "@Url.Action("NewRegistration", "Home")";
                        }
                        else
                        {
                            swal({ title: "Error !", text: 'Mobile Number Exist Already!.', showConfirmButton: false, timer: 2000, type: 'error', animation: true });
                             window.location.href = "@Url.Action("Login2", "Home")";
                            ///$('#divlogin').attr("style", "display:none");
                            //$('#divlogin2').removeAttr("style");
                            
                        }
                },
                error: function (error)
                {
                     swal({ title: "Error !", text: 'Internal Server Error !', showConfirmButton: false, timer: 1500, type: 'error', animation: true });
                }
        });
    });


    $("#btnClick").on("click", function ()
        {
            var Mobile = $('#txtmobilenumber').val();
           var Password = $('#txtpassword').val();
            //var Countrycode = $('#ddlcountrycode').val();
            // var AcademicYear = $('#AcademicYear option:selected').text();
            if (Mobile == "" || Mobile == null)
            {
                swal({ title: "Error !", text: 'Mobile number not empty !', showConfirmButton: false, timer: 1200, type: 'error', animation: true });
                return false;
            }
            $.ajax({
                    url: "@Url.Action("Userlogin", "UserAccount")",
                    method: "POST",
                    datatype: "json",
                data: { sMobile: Mobile, sPassword:Password},
                    success: function (data)
                    {
                        
                        if (data.sResult == null && data.sResult == '')
                        {
                            window.location.href = "@Url.Action("HomeIndex", "Home")";
                        }
                        else
                        {
                            swal({ title: "Error !", text: data.sResult, showConfirmButton: false, timer: 2000, type: 'error', animation: true });
                        }
                },
                error: function (error)
                {
                     swal({ title: "Error !", text: 'Internal Server Error !', showConfirmButton: false, timer: 1500, type: 'error', animation: true });
                }
        });
    });

</script>
