</head>

<body>

    <main>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="container">

                <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="d-flex flex-column align-items-center justify-content-center">

                                <div class="d-flex justify-content-center py-4">
                                    <a href="#" class="logo d-flex align-items-center w-auto">
                                        <img src="~/assets/img/logo.png" alt="">
                                        <span class="d-none d-lg-block">CarterPlus</span>
                                    </a>
                                </div><!-- End Logo -->

                                <div class="card mb-3">

                                    <div class="card-body">

                                        <div class="pt-4 pb-2">
                                            <h5 class="card-title text-center pb-0 fs-4">@ViewBag.MOBILE_NO</h5>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    @Html.Label("First name", htmlAttributes: new { @class = "control-label col-md-4" })
                                                    @*<span style="background-color:red">*</span>*@
                                                    <div class="col-md-8">
                                                        <input type="text" name="txtfirstname" class="form-control" id="txtfirstname" maxlength="20" required>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    @Html.Label("Last name", htmlAttributes: new { @class = "control-label col-md-4" })
                                                    <div class="col-md-8">
                                                        <input type="text" name="txtlastname" class="form-control" maxlength="10" id="txtlastname">
                                                    </div>
                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-4" })
                                                    @*<span style="text-decoration-color:red">*</span>*@
                                                    <div class="col-md-8">
                                                        <input type="email" name="txtemail" class="form-control" id="txtemail" required>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    @Html.Label("Requirement", htmlAttributes: new { @class = "control-label col-md-5" })
                                                    @*<span style="background-color:red">*</span>*@
                                                    <div class="col-md-8">
                                                        @Html.DropDownListFor(model => Model.liRequirementList, (Model.liRequirementList != null) ? Model.liRequirementList : Enumerable.Empty<SelectListItem>(), "I will be using Carterplus for:- ", new { @class = "selectpicker form-control input-sm", @data_parsley_required = "true", @data_live_search = "true", @id = "ddlRequirementList" })

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-md-6">
                                                    @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-4" })
                                                    @*<span style="text-decoration-color:red">*</span>*@
                                                    <div class="col-md-8">
                                                        <input type="password" name="txtpassword" class="form-control" id="txtpassword" required>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    @Html.Label("Confirm Passwprd", htmlAttributes: new { @class = "control-label col-md-5" })
                                                    @*<span style="background-color:red">*</span>*@
                                                    <div class="col-md-8">
                                                        <input type="password" name="txtconpassword" class="form-control" id="txtconpassword" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div><br />
                                        <div class="col-12">
                                            <div class="form-check">
                                                <input class="form-check-input" name="terms" type="checkbox" value="" id="acceptTerms" required>
                                                <label class="form-check-label" for="acceptTerms">I agree and accept the <a href="#">terms and conditions</a></label>
                                                <div class="invalid-feedback">You must agree before submitting.</div>
                                            </div>
                                        </div>
                                        @*<div class="col-md-12">
                                                <a href="">Have referralcode?</a>
                                            </div>*@
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" id="btnsave" type="submit">Create Account</button>
                                        </div>
                                        <div class="col-12">
                                                <p class="small mb-0">Already have an account? <a href="@Url.Action("Login","Home")">Log in</a></p>
                                            </div>

                                    </div>
                                </div>

                                <div class="credits">
                                    <!-- All the links in the footer should remain intact. -->
                                    <!-- You can delete the links only if you purchased the pro version. -->
                                    <!-- Licensing information: https://bootstrapmade.com/license/ -->
                                    <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
                                    Designed by CarterPlus &copy;@DateTime.Now.ToString("yyyy")
                                </div>

                            </div>
                        </div>
                    </div>

                </section>

            </div>
        }
    </main><!-- End #main -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script type="text/javascript" src="~/assets/js/jquery_3_6_1.min.js"></script>
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/plugins/bootstrap-select/bootstrap-select.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/vendor/quill/quill.min.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>

</html>

<script type="text/javascript">

    function ContentLoad()
    {

    }


    $("#btnsave").on("click", function ()
    {
        var sJsonData = {};
        sJsonData.FIRST_NAME = $('#txtfirstname').val();
        sJsonData.LAST_NAME = $('#txtlastname').val();
        sJsonData.EMAIL = $('#txtemail').val();
        sJsonData.REQUIREMENT = $('#ddlRequirementList').val();
        sJsonData.PASSWORD = $('#txtpassword').val();
        sJsonData.CONFIRM_PASSWORD = $('#txtcompassword').val();

        // var AcademicYear = $('#AcademicYear option:selected').text();
        //if (RequirementList == "" || RequirementList == null) {

        //    alert("Moilei Not First Name...!");
        //    return false;
        //}

        $.ajax({
            url: '@Url.Action("CreateNewUser", "Home")',
            method: 'POST',
            datatype: 'json',
            data: { sJsonvalue: JSON.stringify(sJsonData) },
            success: function (data) {
                if (data.sResult == null && data.sResult == '')
                {
                    swal({ title: "Success", text: 'Record Save Sucessfully !', showConfirmButton: false, timer: 1500, type: 'success', animation: true });
                     window.location.href = "@Url.Action("HomeIndex", "Home")";
                }
                else {
                    swal({ title: "Error !", text: 'The user Already Exist !', showConfirmButton: false, timer: 1500, type: 'error', animation: true });
                }

            }, error: function (error) {
                swal({ title: "Error !", text: 'Internal Server Error !', showConfirmButton: false, timer: 1500, type: 'error', animation: true });
            }
        });
    });


</script>
